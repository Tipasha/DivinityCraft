<Alloy>
	<Window class="bg_white">
		<TitleControl>
			<Label id="winTitle" text="{title}"/>
		</TitleControl>
		<View layout="vertical" top="11">
			<View top="0" left="11" right="11" height="Ti.UI.SIZE" layout="vertical">
				<View height="Ti.UI.SIZE" top="0" left="0">
					<ImageView id="image" image="{image}" width="64" height="64" top="0" left="0" backgroundColor="red"/>
					<Label left="70" right="0" top="0" height="Ti.UI.SIZE" text="{bonus}"/>
				</View>
				<Label left="0" right="0" top="6" height="Ti.UI.SIZE" text="{desc}"/>
			</View>
			<ScrollView top="11" showVerticalScrollIndicator="true">
				<TableView id="leftTbl" right="55%" class="ing_table"/>
				<View id="addViewsContainer" layout="vertical" left="45%" right="45%"/>
				<TableView id="rightTbl" left="55%" class="ing_table"/>
			</ScrollView>
		</View>
	</Window>
</Alloy>